@model UserRoles.Dtos.ResponseDtos.AboutUsResponseDto
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>About Us - Trekking</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>


	<section id="about-us" class="about-section header-section py-5">
		<div class="container">
			<div class="row align-items-center">
				<!-- Text Content -->
				<div class="col-md-6 mb-4 text-center text-md-start">
					<h2>@Model.Title</h2>
					<p class="mx-auto mx-md-0 ml-5">
						@Model.Story
					</p>
					<div class="d-flex flex-column flex-sm-row justify-content-center justify-content-md-start gap-2 mt-3">
						<button class="btn  btn-primary btn-theme">
							Latest Promos
						</button>
						<button class="btn btn-primary btn-theme">Our Offerings</button>
					</div>
				</div>

				<!-- Image -->
				<div class="col-md-6 text-center">
					<img src="@Model.ImageUrl" class="img-fluid rounded" alt="Travel Image">
				</div>
			</div>
		</div>
	</section>

</body>
</html>
