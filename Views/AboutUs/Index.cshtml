@model UserRoles.Dtos.ResponseDtos.AboutUsResponseDto

@{
    ViewData["Title"] = "About Us";
}

<!-- ✅ Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h3 class="mb-0">
            <i class="fa-solid fa-circle-info me-2"></i> About Us
        </h3>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fa-solid fa-pen-to-square me-1"></i> Edit
        </a>
    </div>

    <!-- ✅ Success & Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-circle-check me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-triangle-exclamation me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- 🖼️ About Us Details -->
    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th style="width: 150px;">Image</th>
                    <th>Story</th>
                    <th>Title</th>
                    <th>Mission</th>
                    <th class="text-end" style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <img src="@Model.ImageUrl" alt="About us image"
                             class="img-thumbnail rounded"
                             style="max-height: 100px;" />
                    </td>
                    <td>@Model.Story</td>
                    <td>@Model.Title</td>
                    <td>@Model.Mission</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning me-1">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this record?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap dismissible alerts need JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
