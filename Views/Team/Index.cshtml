@model IEnumerable<UserRoles.Models.Team.TeamMember>

<style>
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        }
</style>

<div class="container my-5">
    <h2 class="text-center mb-4">Our Team</h2>

    <div id="teamContainer" class="row g-4">
        <!-- Cards will load here -->
    </div>

    <!-- Loader -->
    <div id="loadingIndicator" class="text-center my-4" style="display:none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <!-- End message -->
    <div id="endMessage" class="text-center text-muted my-4" style="display:none;">
        <p>No more team members to load.</p>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        let page = 1;
        const pageSize = 10;
        let isLoading = false;
        let hasMore = true;

        $(document).ready(function () {
            // Initial load
            loadTeamMembers();

            // Load more when user scrolls near bottom
            $(window).on('scroll', function () {
                if (hasMore && !isLoading && $(window).scrollTop() + $(window).height() >= $(document).height() - 150) {
                    loadTeamMembers();
                }
            });
        });

        function loadTeamMembers() {
            isLoading = true;
            $("#loadingIndicator").show();

            $.get(`/Team/GetPaged?page=${page}&pageSize=${pageSize}`, function (data) {
                if (data.length > 0) {
                    data.forEach(member => {
                        const card = `
                                    <div class="col-sm-6 col-md-4 col-lg-3">
                                        <div class="card h-100 shadow-sm border-0 rounded-4">
                                            <img src="${member.imageUrl || '/images/default-profile.png'}"
                                                 class="card-img-top rounded-top-4"
                                                 style="height:220px; object-fit:cover;">
                                            <div class="card-body text-center">
                                                <h5 class="card-title fw-bold mb-1">${member.fullName}</h5>
                                                <p class="text-muted mb-3">${member.position || ''}</p>
                                                <div class="d-flex justify-content-center gap-3">
                                                    ${member.facebookUrl ? `<a href="${member.facebookUrl}" target="_blank"><i class="bi bi-facebook text-primary fs-5"></i></a>` : ''}
                                                    ${member.twitterUrl ? `<a href="${member.twitterUrl}" target="_blank"><i class="bi bi-twitter text-info fs-5"></i></a>` : ''}
                                                    ${member.linkedInUrl ? `<a href="${member.linkedInUrl}" target="_blank"><i class="bi bi-linkedin text-primary fs-5"></i></a>` : ''}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                `;
                        $("#teamContainer").append(card);
                    });

                    page++; // load next page next time
                } else {
                    hasMore = false;
                    $("#endMessage").show();
                }

                $("#loadingIndicator").hide();
                isLoading = false;
            }).fail(function () {
                $("#loadingIndicator").hide();
                isLoading = false;
            });
        }
    </script>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}
