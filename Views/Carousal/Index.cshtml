@model List<UserRoles.Dtos.ResponseDtos.CarousalImageResponseDto>

@{
    ViewData["Title"] = "Carousel List";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h3 class="mb-0">
            <i class="bi bi-images me-2"></i> Carousel Images
        </h3>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Add New
        </a>
    </div>

    <!-- 🔍 Filter Dropdown -->
    <form method="get" class="mb-4">
        <div class="input-group" style="max-width: 350px;">
            <select name="filter" class="form-select" onchange="this.form.submit()">
                <option value="">All Types</option>
                @foreach (var item in (IEnumerable<CarousalEnum>)ViewBag.EnumOptions)
                {
                    <option value="@item" selected="@(item == (CarousalEnum)ViewBag.CurrentFilter)">
                        @item
                    </option>
                }
            </select>
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-funnel"></i>
            </button>
        </div>
    </form>

    <!-- ✅ Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- 🖼️ Table of Carousals -->
    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th style="width: 150px;">Image</th>
                    <th>Caption</th>
                    <th>Sub Caption</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th class="text-end" style="width: 160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.ImageUrl" alt="carousel image"
                                     class="img-thumbnail rounded"
                                     style="max-height: 80px;" />
                            </td>
                            <td>@item.Caption</td>
                            <td>@item.SubCaption</td>
                            <td>
                                <span class="badge bg-info text-dark">@item.carousalEnum</span>
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle me-1"></i> Inactive
                                    </span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this image?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            <i class="bi bi-exclamation-circle me-2"></i>No carousel images found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {

}
