@model UserRoles.Dtos.ResponseDtos.CarousalImageResponseDto

@{
    var currentValue = Model.carousalEnum;
    ViewData["Title"] = "Edit Carousel";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Carousel Image</h4>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <!-- Caption -->
                        <div class="mb-3">
                            <label asp-for="Caption" class="form-label fw-semibold"></label>
                            <input asp-for="Caption" class="form-control" placeholder="Enter main caption" />
                            <span asp-validation-for="Caption" class="text-danger small"></span>
                        </div>

                        <!-- SubCaption -->
                        <div class="mb-3">
                            <label asp-for="SubCaption" class="form-label fw-semibold"></label>
                            <input asp-for="SubCaption" class="form-control" placeholder="Enter sub caption" />
                            <span asp-validation-for="SubCaption" class="text-danger small"></span>
                        </div>

                        <!-- Carousel Type -->
                        <div class="mb-3">
                            <label asp-for="carousalEnum" class="form-label fw-semibold">Carousel Type</label>
                            <select asp-for="carousalEnum" class="form-select">
                                @foreach (var item in (IEnumerable<CarousalEnum>)ViewBag.EnumOptions)
                                {
                                    <option value="@item" selected="@(item == currentValue)">@item</option>
                                }
                            </select>
                        </div>

                        <!-- Current Image -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Current Image</label>
                            <div class="border rounded p-2 bg-light text-center">
                                <img src="@Model.ImageUrl" alt="carousel image" class="img-fluid rounded" style="max-height: 250px;" />
                            </div>
                        </div>

                        <!-- Replace Image -->
                        <div class="mb-3">
                            <label for="ImageFile" class="form-label fw-semibold">
                                <i class="bi bi-upload me-1"></i> Replace Image
                            </label>
                            <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
                            <small class="text-muted">Recommended size: 1920 × 1080px</small>
                        </div>

                        <!-- Is Active -->
                        <div class="form-check form-switch mb-4">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label fw-semibold"></label>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save me-1"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
